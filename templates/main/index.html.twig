{% extends 'base.html.twig' %}

{% block title %}Accueil! | {{parent() }} {% endblock %}

{% block body %}
<section class="w-50 mx-auto my-auto content-container text-center">
    <header>
        <h1>Mes fichiers</h1>
    </header>
    <ul class="my-4 list-group list-group-flush w-50 mx-auto">
        {% for file in files %}
        <li class="list-group-item">
            <a href="{{path('file-download', {id: file.id})}}">{{ file.alias }}
                <span><i class="fas fa-download px-2"></i></span>
            </a>
            <a href="{{path('file-delete', {id: file.id})}}"><i class="fas fa-trash px-2"></i></a>
                <span class="badge bg-secondary text-wrap">
                    {{ file.createdAt | date("d-m-y")}}
                </span>
        </li>   
        {% else %} 
            <p>Vous n'avez pas encore de fichier, cliquez sur "Charger un fichier" pour charger votre premier fichier !</p>
        {% endfor %}
    </ul>
    <div class="new-upload">
        <a href="{{path('file-upload')}}" class="btn btn-outline-success ml-4">Charger un fichier</a>
    </div>
    
</section>

{% endblock %}
